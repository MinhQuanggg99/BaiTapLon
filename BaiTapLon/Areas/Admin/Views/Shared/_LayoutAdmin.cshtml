<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BaiTapLon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaiTapLon.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 col-lg-2 d-md-block bg-dark sidebar p-3" role="navigation" aria-label="Sidebar">
                <h2 class="text-center mb-4 text-white">Library Manager</h2>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-action="Index" asp-area="Admin" asp-controller="Books"
                            class="nav-link active d-flex align-items-center text-white py-2 ">
                            <i class="bi bi-house-door me-3 fs-4"></i>
                            Trang chủ
                        </a>
                    </li>
                    <hr class="border-light" />
                    <li class="nav-item mb-2">
                        <a asp-action="Index" asp-area="Admin" asp-controller="BookTypes"
                            class="nav-link d-flex align-items-center text-white py-2 ">
                            <i class="bi bi-plus-circle me-3 fs-4"></i>
                            Danh mục
                        </a>
                    </li>

                    <hr class="border-light" />
                    <li class="nav-item mb-2">
                        <a asp-action="BorrowBook" asp-area="Admin" asp-controller="BookAction"
                            class="nav-link d-flex align-items-center text-white py-2 ">
                            <i class="bi bi-book me-3 fs-4"></i>
                            Danh Sách mượn
                        </a>
                    </li>
                    <hr class="border-light" />
                    <li class="nav-item mb-2">
                        <a asp-action="ReturnBook" asp-area="Admin" asp-controller="BookAction"
                            class="nav-link d-flex align-items-center text-white py-2 ">
                            <i class="bi bi-book me-3 fs-4"></i>
                            Danh Sách trả
                        </a>
                    </li>
                    <hr class="border-light" />
                    <li class="nav-item mb-2">
                        <a asp-action="Index" asp-area="Admin" asp-controller="Account"
                            class="nav-link d-flex align-items-center text-white py-2 ">
                            <i class="bi bi-cloud-sun me-3 fs-4"></i>
                            Người đọc
                        </a>
                    </li>
                    <hr class="border-light" />
                    <li class="nav-item mb-2">
                        <a asp-action="Index" asp-area="Admin" asp-controller="Role"
                            class="nav-link d-flex align-items-center text-white py-2 ">
                            <i class="bi bi-cloud-sun me-3 fs-4"></i>
                            Quyền
                        </a>
                    </li>
                </ul>
            </nav>

            <main role="main" class="col-md-10 col-lg-10 ms-sm-auto px-4">
                <div class="d-flex justify-content-end align-items-end border-bottom mb-3">
                    <h3>
                        <partial name="_LoginAdminPartial"></partial>
                    </h3>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
