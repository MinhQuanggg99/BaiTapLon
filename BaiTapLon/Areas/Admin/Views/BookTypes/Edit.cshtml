@model BaiTapLon.Models.BookType

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookTypeId" />
            <div class="form-group">
                <label asp-for="BookTypeName" class="control-label"></label>
                <input asp-for="BookTypeName" class="form-control" />
                <span asp-validation-for="BookTypeName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
