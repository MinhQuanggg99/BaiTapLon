@model BaiTapLon.Models.BookType

<div class="d-flex justify-content-center align-items-center ">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookTypeName" class="control-label"></label>
                <input asp-for="BookTypeName" class="form-control" />
                <span asp-validation-for="BookTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-lg mt-3 btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
