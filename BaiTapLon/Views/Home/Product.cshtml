@model IEnumerable<BaiTapLon.Models.Books>

<ul class="filter-list">
    <li><a asp-controller="Home" asp-action="Product" asp-route-id="3" class="filter-link">Sách giáo khoa</a></li>
    <li><a asp-controller="Home" asp-action="Product" asp-route-id="2" class="filter-link">Sách tham khảo</a></li>
    <li><a asp-controller="Home" asp-action="Product" asp-route-id="1" class="filter-link">Truyện tranh</a></li>
</ul>

<section id="books" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Danh sách sách</h2>
        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card shadow-sm">
                            <img src="@Url.Content(item.Image ?? "~/images/default.png")" class="card-img-top"
                                alt="@item.BookName" style="object-fit: cover; width: 100%; height: 25em;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-truncate">@item.BookName</h5>
                                <p class="card-text">@item.Description</p>
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.BookId"
                                    class="btn btn-primary mt-auto">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">Không có sách nào để hiển thị.</p>
            }
        </div>
    </div>
</section>
